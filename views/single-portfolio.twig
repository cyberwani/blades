{% extends "base.twig" %}
{% block content %}
<div class="content-wrapper">
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="portfolio-layouts {% if post.billboard_src %}billboard-on{% endif %}">
			{% if post.billboard_src %}
			<!-- Portfolio Banner -->
			<div class="portfolio-banner">
				<img class="portfolio-banner-img" src="{{post.billboard_src}}" />
				{% if post.billboard_credit %}
				<p class="cover-credit">Photo by {{post.billboard_credit}}</p>
				{% endif %}
			</div> <!-- /portfolio-banner -->
			{% endif %}

			<!-- Portfolio Headline -->
			<div class="site-width">
				<hgroup class="portfolio-h-outer">
					<div class="portfolio-h-inner">
						{% if post.kicker %}
						<h3 class="h4 portfolio-kicker">{{post.kicker}}</h3>
						{% endif %}
						<h1 class="h1 portfolio-h1">
							{% if post.link %}
								<a href="{{post.link}}" target="_blank">
							{% endif %}
								{{post.post_title}}
							{% if post.link %}
								</a>
							{% endif %}
						</h1>
					</div> <!-- /.portfolio-title-inner -->
				</hgroup>
			</div> <!-- /site-width -->

			<!--<div class="portfolio-intro site-width">
				{{post.content}}
			</div>-->

			<div class="portfolio-content-before">
				{% include ["portfolio/"~post.slug~"-before.twig", "portfolio/"~post.slug~".twig"] ignore missing %}
			</div>

			<div class="portfolio-content">
				{% for layout in post.get_layouts %}
					{% if layout.images %}
						<div class="portfolio-image-set image-count-{{layout.images|length}} {{layout.full_width == 1 ? 'full-width'}}">
							{% for image in layout.images %}
								<img class="lazy" data-original="{{image.src|tojpg}}" data-src="{{image.src|tojpg}}" src="/wp-content/themes/blades/images/dev/placeholder.gif" alt="{{image.alt_text|raw}}"/>
								<p>{{image.caption}}</p>
							{% endfor %}
						</div>
					{% elseif layout.description or layout.subhead %}
						<div class="site-width">
							<div class="portfolio-desc txt-width">
								{% if layout.subhead %}
									<h2 class="h2 portfolio-desc-h">{{layout.subhead}}</h2>
								{% endif %}
								{% if layout.description %}
									<div class="txt-lg portfolio-desc-txt">
										<p>{{layout.description|raw}}</p>
									</div>
								{% endif %}
							</div>
						</div> <!-- /site-width -->
					{% elseif layout.overline %}
						<div>
							<h4 class="portfolio-overline">{{layout.overline}}</h4>
						</div>
					{% elseif layout.gray_block %}
						{% if layout.gray_block|trim == 'open' %}
							<section class="portfolio-gray-splash" style="background-color:#DDD">
						{% else %}
							</section>
						{% endif %}
					{% endif %}
					{% if layout.acf_fc_layout == 'include' %}
						<div class="portfolio-include">
							{% include 'portfolio/' ~ layout.file_name %}
						</div>
					{% endif %}
				{% endfor %}
			</div> <!-- /portfolio-content-->

			<div class="portfolio-content-after">
				{% include ["portfolio/"~post.slug~"-after.twig"] ignore missing %}
			</div>
		</section> <!-- /portfolio-layouts -->

		<section class="comments">
		</section>
	</article>
</div> <!-- /content-wrapper -->

<div class="wrapper">
	<section id="archive-tiles">
		{% for tile in tiles %}
			{% include 'tile.html' %}
		{% endfor %}
	</section>
</div>
{% endblock %}
{% extends "base.twig" %}
{% block content %}

{% include 'custom/home-stage-hlr.twig' %}

<section class="hp-themes home-inset">
	<div class="wrapper">
		<header class="hp-themes-header">
			<!-- <h2 class="h3">Here's what's going on at Upstatement</h2> -->
		</header>
		<div class="hp-theme-alt">
			<div class="tiles-mod">
				{% for hl_group in highlights %}
				<div class="tile-row-mod">
					{% for highlight in hl_group %}
					<div class="alt-tile tile-border ui-block-{{loop.index}}">
						<!--<h3 class="h4">{{highlight.kicker}}</h3>-->
						<a href="{{highlight.link}}">
 							<img class="alt-tile-img" src="{{highlight.thumbnail.src}}" alt="{{highlight.title|e}}"/>
 						</a>
						<h2 class="highlight-headline"><a href="{{highlight.link}}">{{highlight.title}}</a></h2>
						<div class="txt-lg txt-dark">{{highlight.content}}</div>
					</div><!-- /alt-tile -->
					{% endfor %}
				</div> <!-- /tile-row-mod -->
				{% endfor %}
			</div> <!-- /tiles-mod -->

		</div> <!-- /hp-theme-alt -->
	</div> <!-- /wrapper -->
</section> <!-- /hp-themes -->

<div class="hp-logo-pond">

	{% include 'mods/home-logo-pond.twig' %}
</div>

<!-- Feeds -->
<div class="hp-feeds wrapper">
	<div class="hp-blog">
		<h3 class="h4"><a href="/blog/">On Our Blog</a></h3>
		<section class="hp-blog-list">
			{% for blog in blogs %}
				<article class="media-block blog blog-small" id="post-{{blog.post_name}}">
					<h3 class="h3"><a href="{{blog.link}}">{{blog.title}}</a></h3>
					<p class="blog-author"><span>By</span> {{blog.author.name}}</p>
					<p class="txt txt-dark">{{blog.get_preview(22, true, 'More &raquo;')}}</p>
				</article>
			{% endfor %}
		</section>
	</div> <!-- /hp-blog -->


	{# include "mods/home-tweets.twig" #}

</div><!-- /hp-feeds -->
{% endblock %}
